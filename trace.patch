+uint64
+kcollect_nproc(void)
+{
+  struct proc *p;
+  uint64 count = 0;
+
+  for(p = proc; p < &proc[NCPU]; p++){
+    if(p->state != UNUSED) {
+      count++;
+    }
+  }
+  return count;
+}
+
+uint64
+kcollect_load(void)
+{
+  struct proc *p;
+  uint64 count = 0;
+
+  for(p = proc; p < &proc[NPROC]; p++){
+    if(p->state == RUNNING || p->state == RUNNABLE)
+      count++;
+  }
+  
+  return count;
+}
